{% extends 'base.html.twig' %}

{% block title %}My Bookmark|{% endblock %}

{% block body %}
    {% include "components/_header.html.twig" %}

    <div class="container-fuild">
        <h2 class="text-center m-5">
            My {% block titlePage %}{% endblock %}'s bookmarks
        </h2>
    </div>

    <div class="row m-5">

        <div class="col text-center border border-dark rounded-3">
            <h4 class="mt-3">
                On going
            </h4>
            <hr>
            <div>
                <a class="btn btn-light text-primary m-2" href="{{ path('bookmark_new') }}">Create new</a>
            </div>
            <div>
                {% if onGoingBookmarks|length == 0 %}
                    <p>
                        You don't have any bookmark !
                    </p>
                {% else %}
                    <div class="row row-cols-1 row-cols-md-3 g-4 m-4">
                        {% for bookmark in onGoingBookmarks %}
                            <div class="col">   
                                {% include "components/_onGoingBookmarks_card.html.twig" %}
                            </div>
                        {% endfor %}                    
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="row m-5">
        <div class="col text-center border border-dark rounded-3">
            <h4 class="mt-3">
                Ended
            </h4>
            <hr>
            <div>
                {% if endedBookmarks|length == 0 %}
                    <p>
                        You don't have any ended bookmark !
                    </p>
                {% else %}
                    {% for bookmark in endedBookmarks %}
                        {% include "components/_endedBookmarks_card.html.twig" %}
                    {% endfor %}                    
                {% endif %}
            </div>
        </div>

    <div class="container-fuild">
        {% block bottomContent %}{% endblock %}    
    </div>

{% endblock %}