{% extends 'base.html.twig' %}

{% block title %}Bookmark{% endblock %}

{% block body %}
    <h1>Bookmark</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bookmark.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ bookmark.name }}</td>
            </tr>
            <tr>
                <th>Bookmark</th>
                <td>{{ bookmark.bookmark }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ bookmark.comment }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ bookmark.status }}</td>
            </tr>
            <tr>
                <th>StartedAt</th>
                <td>{{ bookmark.startedAt ? bookmark.startedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateAt</th>
                <td>{{ bookmark.updateAt ? bookmark.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndedAt</th>
                <td>{{ bookmark.endedAt ? bookmark.endedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('bookmark_index') }}">back to list</a>

    <a href="{{ path('bookmark_edit', {'id': bookmark.id}) }}">edit</a>

    {{ include('bookmark/_delete_form.html.twig') }}
{% endblock %}
