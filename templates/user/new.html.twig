{% extends 'base.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}
<div class="text-center m-5">
    <h1>
        Create new account
    </h1>

    <div class="d-flex justify-content-center">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary text-secondary m-2">{{ button_label|default('Create') }}</button>
            <a class="btn btn-warning m-2" href="{{ path('app_index') }}">Back</a>
        </div>
        {{ form_end(form) }}
    </div>

</div>
{% endblock %}
